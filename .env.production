# AWY Production Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://awy_user:your_secure_postgres_password_here@postgres:5432/awy_db

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Push Notifications (VAPID)
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:admin@yourdomain.com

# Frontend URLs
REACT_APP_API_URL=https://awy.yourdomain.com
REACT_APP_WIDGET_URL=https://widget.yourdomain.com

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password_here

# SSL/TLS (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/awy.crt
SSL_KEY_PATH=/etc/nginx/ssl/awy.key

# Email Configuration (for notifications)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM=AWY System <noreply@yourdomain.com>

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/app/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://widget.yourdomain.com,https://admin.yourdomain.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_FILE_UPLOAD=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_minimum_32_characters_long
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

