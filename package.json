{
  "name": "awy-monorepo",
  "version": "1.0.0",
  "description": "Always With You - Heart and Soul Widget for connecting students with loved ones",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"pnpm --filter server dev\" \"pnpm --filter widget dev\" \"pnpm --filter admin dev\" \"pnpm --filter sandbox dev\"",
    "build": "pnpm --filter schema build && pnpm --filter utils build && pnpm --filter ui build && pnpm --filter sdk build && pnpm --filter server build && pnpm --filter widget build && pnpm --filter admin build && pnpm --filter sandbox build",
    "build:packages": "pnpm --filter './packages/*' run build",
    "build:apps": "pnpm --filter './apps/*' run build",
    "build:server": "pnpm --filter '@awy/server' run build",
    "build:widget": "pnpm --filter '@awy/widget' run build",
    "build:admin": "pnpm --filter '@awy/admin' run build",
    "build:sdk": "pnpm --filter '@awy/sdk' run build",
    "test": "pnpm --filter \"*\" test",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "pnpm --filter \"*\" lint",
    "typecheck": "pnpm --filter \"*\" typecheck",
    "clean": "pnpm --filter \"*\" clean",
    "seed": "pnpm --filter server seed",
    "db:migrate": "cd infra/supabase && supabase db push",
    "db:migrate:test": "cd infra/supabase && supabase db push --db-url $DATABASE_URL",
    "db:seed": "cd infra/supabase && supabase db seed",
    "db:seed:test": "cd infra/supabase && supabase db seed --db-url $DATABASE_URL",
    "start:test": "NODE_ENV=test pnpm --filter '@awy/server' run start",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@playwright/test": "^1.40.0",
    "@vitest/coverage-v8": "^1.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "packageManager": "pnpm@8.12.0"
}

