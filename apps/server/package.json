{
  "name": "@awy/server",
  "version": "1.0.0",
  "description": "AWY Fastify server with WebRTC signaling and real-time features",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "seed": "tsx src/scripts/seed.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@awy/schema": "workspace:*",
    "@awy/utils": "workspace:*",
    "@fastify/cors": "^8.4.0",
    "@fastify/websocket": "^8.3.1",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/helmet": "^11.1.1",
    "@supabase/supabase-js": "^2.38.0",
    "fastify": "^4.24.3",
    "ws": "^8.14.2",
    "web-push": "^3.6.6",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/ws": "^8.5.8",
    "@types/web-push": "^3.6.3",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}

